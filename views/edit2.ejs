<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head2', {title: 'Editando: ' + propiedadesProductos.name}) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar2') %>
	<!-- /Header -->

	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Estás editando: <i><%= propiedadesProductos.name %></i></h2>
			</div>
		</div>
		<div class="col-12">
			<form action="/product/edit/<%= propiedadesProductos.id %>?_method=PUT " method="POST" enctype="multipart/form-data">
				<div class="row product-detail">
					<div class="col-12 col-md-6">
						<label for="name" class="form-label">Nombre del producto:</label>
						<input type="text" id="name" name="name" value="<%= propiedadesProductos.name %>" placeholder="Ej: Zapatillas Reebok" class="form-input">
					</div>
					<div class="col-12 col-md-6">
						<label for="price" class="form-label">Precio del producto:</label>
						<input type="text" id="price" name="price" value="<%= propiedadesProductos.price %>" placeholder="Ej: 5678" class="form-input">
					</div>
					<div class="col-12 col-md-6">
						<label for="discount" class="form-label">Descuento:</label>
						<input type="text" id="discount" name="discount" value="<%= propiedadesProductos.discount %>" placeholder="Ej: 15" class="form-input">
					</div>
					<div class="col-12 col-md-6">
						<label for="category" class="form-label">Categoría:</label>
						<select name="category" id="category" class="form-input">
							<% if( propiedadesProductos.category == 'in-sale' ) { %> 
								<option value="in-sale" selected>in-sale</option>
								<option value="visited">visited</option>
								<% }else { %>
									<option value="in-sale">in-sale</option>
									<option value="visited" selected>visited</option>
									<% } %> 
						</select>
					</div>
					<div class="col-12">
						<label for="description" class="form-label">Descipción:</label>
						<textarea name="description" id="description" class="form-input"><%= propiedadesProductos.description %></textarea>
					</div>
					<div class="col-12">
						<button type="submit" class="buy-now-button">Guardar producto</button>
					</div>
				</div>
			</form>
		</div>

	</div>
	<!-- /todos los productos -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>